---
import BaseLayout from "../layouts/BaseLayout.astro";
import DiscoveryForm from "../components/DiscoveryForm.astro"
import discoveryForm from "../data/discovery-form-data.js";
import HeaderSmall from "../components/HeaderSmall.astro";
import discoveryFlight from "../data/discovery-flight.js";
import DiscoveryFlightCards from "../components/DiscoveryFlightCards.astro";
import FlightDetail from "../components/FlightDetail.astro";

const dataForm = discoveryForm.data;
const dataFlight = discoveryFlight.data;
---

<BaseLayout
  siteTitle={dataForm.pageTitle}
  siteDescription={dataForm.pageDescription}
  keywords={dataForm.pageKeywords}
>
  <!-- <HeaderScreen content={data.header} /> -->
  <HeaderSmall content={dataForm.header} />
  <FlightDetail pricing={dataFlight.pricing} />
  <DiscoveryFlightCards flightData={dataFlight.pricing} />
  <DiscoveryForm content={dataForm.info} />

  <script src="../scripts/emailValidation.js"></script>
</BaseLayout>
