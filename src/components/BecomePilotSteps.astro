---
import ImageComp from "./ImageComp.astro";

const { content } = Astro.props;
---

<section class='flex flex-col lg:flex-row flex-1 gap-6 px-4 sm:px-6 lg:px-8 bg-accent-300 py-16 shadow-lg'>
  <!-- Heading -->
  <div class="flex flex-col max-w-2xl md:max-w-none lg:w-1/3 justify-center text-center lg:text-right px-6">
    <p class="text-sm font-bold uppercase tracking-widest text-primary-700">
      {content.subtitle}
    </p>
    <h2 class="mt-3 text-3xl font-bold tracking-tight text-muted-700 sm:text-4xl">
      {content.title}
    </h2>
    <p class="mt-3 text-muted-600">
      {content.blurb}
    </p>
  </div>

  <!-- Feature Cards (no stats) -->
  <div class="flex-1 mt-8 md:mt-10 grid gap-6 grid-cols-1 sm:grid-cols-2 md:grid-cols-2 px-4 md:px-8">
    {content.items.map((f) => (
      <article class="group relative overflow-hidden rounded-2xl bg-accent-300/80 p-5 shadow-lg transition-all duration-300 hover:-translate-y-0.5 hover:shadow-xl">
        <!-- soft radial glow on hover -->
        <div
          class="pointer-events-none absolute inset-0 rounded-2xl opacity-0 transition-opacity duration-300 group-hover:opacity-100"
          style="background: radial-gradient(90% 70% at 50% 0%, rgba(122,201,82,0.12), transparent 60%);"
        ></div>

        <!-- Icon / Badge -->
        <div class="mb-4 inline-flex h-11 w-11 items-center justify-center rounded-xl bg-primary-50 ring-1 ring-primary-100 transition-transform duration-300 group-hover:scale-110">
          <ImageComp
            imagePath={f.icon}
            imageAlt={f.title + " icon"}
            styles="h-6 w-6"
          />
        </div>

        <h3 class="relative z-10 text-lg font-semibold text-muted-900">
          {f.title}
        </h3>
        <p class="relative z-10 mt-2 text-sm leading-6 text-muted-600">
          {f.description}
        </p>

        <!-- Hover CTA underline + arrow nudge -->
        {/* <div class="relative z-10 mt-4 inline-flex items-center gap-2 text-sm font-medium text-primary-700">
          <span class="relative after:absolute after:-bottom-0.5 after:left-0 after:h-[2px] after:w-full after:origin-left after:scale-x-0 after:bg-primary-500 after:transition-transform after:duration-300 group-hover:after:scale-x-100">
            Learn more
          </span>
          <svg class="h-4 w-4 transition-transform duration-300 group-hover:translate-x-0.5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10.22 3.22a.75.75 0 011.06 0l5.5 5.5a.75.75 0 010 1.06l-5.5 5.5a.75.75 0 11-1.06-1.06L14.94 10 10.22 5.28a.75.75 0 010-1.06z" clip-rule="evenodd"/>
            <path d="M3 10a.75.75 0 01.75-.75h10.69a.75.75 0 010 1.5H3.75A.75.75 0 013 10z"/>
          </svg>
        </div> */}

        <!-- Border accent on hover -->
        <div class="pointer-events-none absolute inset-0 rounded-2xl ring-1 ring-inset ring-muted-200 transition-colors duration-300 group-hover:ring-accent-500"></div>

        <!-- Lift shadow -->
        <div class="pointer-events-none absolute -bottom-10 left-1/2 h-24 w-11/12 -translate-x-1/2 rounded-[50%] bg-muted-900/5 blur-2xl transition-opacity duration-300 group-hover:opacity-80"></div>
      </article>
    ))}
  </div>
</section>
