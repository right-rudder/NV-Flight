---

const { content } = Astro.props;

const gridCols = content.columns === 2 ? "md:grid-cols-2" : "md:grid-cols-2 lg:grid-cols-3";
---

<section class="bg-white">
  <div class="mx-auto max-w-7xl px-6 py-20 lg:px-8">
    <div class="mx-auto max-w-3xl text-center">
      <h2 class="text-3xl font-semibold tracking-tight text-muted-900 sm:text-4xl">{content.title}</h2>
    </div>

    <div class={`mt-10 grid grid-cols-1 gap-6 ${gridCols}`}>
      {content.items.map((it, i) => (
        <article class="relative h-full rounded-xl border border-muted-200 bg-muted-50 p-6 hover:bg-white">
          {content.numbered && (
            <span class="absolute -top-3 -left-3 inline-flex h-8 min-w-8 items-center justify-center rounded-full bg-muted-900 px-2 text-xs font-semibold text-white">
              {(it.number ?? String(i + 1)).padStart(2, "0")}
            </span>
          )}
          <h3 class="text-lg font-semibold text-muted-900">{it.title}</h3>
          {it.desc && <p class="mt-2 text-sm leading-6 text-muted-700">{it.desc}</p>}
        </article>
      ))}
    </div>
  </div>
</section>
