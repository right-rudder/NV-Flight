---

const { flightData } = Astro.props;
---

<section class="relative mx-auto px-5 md:px-10 lg:px-20 py-20 bg-gradient-to-b from-muted-900 to-muted-700 text-white space-y-12">
  <!-- Heading -->
  <div class="text-center max-w-3xl mx-auto mb-14">
    <p class="text-primary-500 font-semibold tracking-wide uppercase">
      {flightData.upperHeading}
    </p>
    <h2 class="text-3xl md:text-4xl font-bold mt-2">
      {flightData.heading}
    </h2>
    <p class="text-muted-200 mt-4">{flightData.description}</p>
  </div>

  <!-- Pricing Cards -->
  <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
    {
      flightData.pricingCards.map((card) => (
        <div class="flex flex-col bg-white rounded-2xl shadow-xl border border-gray-200 overflow-hidden transition duration-300 transform-gpu hover:scale-105 hover:shadow-[0_30px_70px_-15px_theme('colors.primary.500/45%')] hover:border-primary-500 hover:ring-1 hover:ring-primary-500/30">
          <div class="p-6 flex flex-col flex-grow">
            <h3 class="text-xl font-bold text-gray-900">{card.title}</h3>
            <p class="text-3xl font-extrabold text-primary-600 mt-2">
              {card.price}
            </p>
            <p class="mt-3 text-gray-600 flex-grow">{card.description}</p>

            <ul class="mt-4 space-y-2 text-gray-700 text-sm">
              {card.features.map((feature) => (
                <li class="flex items-start gap-2">
                  <svg
                    class="h-5 w-5 text-primary-500 mt-0.5 flex-shrink-0"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 13l4 4L19 7"
                    />
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
          </div>

          <div class="p-6 pt-0">
            <a
              href={flightData.button.link}
              class="w-full inline-flex justify-center items-center rounded-xl bg-primary-600 px-4 py-3 text-white font-semibold hover:bg-primary-700 transition"
            >
              {flightData.button.text}
            </a>
          </div>
        </div>
      ))
    }
  </div>
</section>
