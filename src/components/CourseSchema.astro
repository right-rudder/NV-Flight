---
interface Props {
  title: string;
  description: string;
  courseWorkload?: string;
  price?: string;
  programDuration?: string;
}

const {
  title,
  description,
  courseWorkload = "Varies based on student schedule and progress",
  price = "Varies based on individual progress",
  programDuration = "Self-paced"
} = Astro.props;
---

<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Course",
  "name": title,
  "description": description,
  "provider": {
    "@type": "Organization",
    "name": "NV Flight School",
    "sameAs": "https://nvflight.com/"
  },
  "hasCourseInstance": {
    "@type": "CourseInstance",
    "courseMode": "onsite",
    "courseWorkload": courseWorkload,
    "timeRequired": programDuration,
    "location": {
      "@type": "Place",
      "name": "NV Flight School at Reno-Tahoe International Airport",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "Reno",
        "addressRegion": "NV",
        "postalCode": "89502",
        "streetAddress": "Gentry Wy"
      }
    },
    "offers": {
      "@type": "Offer",
      "category": "Flight Training",
      "priceCurrency": "USD",
      "price": price,
      "availability": "https://schema.org/InStock"
    }
  }
})}>
</script>
