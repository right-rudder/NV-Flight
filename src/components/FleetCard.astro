---
const { content, index } = Astro.props;
import ImageComp from "./ImageComp.astro";
---

<div class="bg-white  " id={content.tail}>
  <div class="mx-auto px-4 py-16 sm:px-6 sm:py-24 lg:max-w-7xl lg:px-8 border-b border-primary-600">
    <!-- Product -->
    <div
      class="lg:grid lg:grid-cols-7 lg:grid-rows-1 lg:gap-x-8 lg:gap-y-10 xl:gap-x-16"
    >
      <!-- Product image -->
      <div class="lg:col-span-4 lg:row-end-1 rounded-2xl items-center w-full justify-center">
        <div class="flex flex-col items-center justify-center">
            <div class="w-full">
                <ImageComp
                imagePath={content.imagePath}
                imageAlt="Sample of 30  icons with friendly and fun details in outline, filled, and brand color styles."
                styles="aspect-4/3 w-full  bg-gray-100 object-cover rounded-2xl shadow-lg hover:scale-105 transition-transform duration-300 mx-auto"
                />
            </div>
            <div class="flex pt-6">
                {content.images.map((image) => (
                  <ImageComp
                    imagePath={image.imagePath}
                    imageAlt={image.imageAlt}
                    styles="w-[31%] object-cover rounded-lg shadow-md mx-2 hover:scale-105 transition-transform duration-300"
                  />
                ))}
            </div>
        </div>
        
      </div>

      <!-- Product details -->
      <div
        class="mx-auto mt-14 max-w-2xl sm:mt-16 lg:col-span-3 lg:row-span-2 lg:row-end-2 lg:mt-0 lg:max-w-none"
      >
        <div class="flex flex-col-reverse">
          <div class="mt-4">
            <h2
              class="text-2xl font-bold tracking-tight text-gray-700 sm:text-3xl"
            >
              {content.name}
            </h2>

            <p class="mt-2 text-sm text-gray-700">
              {content.summary}
            </p>
          </div>

          <div>
            <h3 class="text-primary-600 uppercase">{content.manufacture}</h3>
          </div>
        </div>

        <p class="mt-6 text-gray-700">
          {content.description}
        </p>

        <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-2">
          <a
            href="/enroll"
            class="flex w-full items-center justify-center rounded-full  border border-transparent bg-primary-600 px-8 py-3 text-base font-medium text-white hover:bg-primary-700 focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-gray-50 focus:outline-hidden"
            >Enroll Now</a
          >
        </div>

        <div class="mt-10 border-t border-gray-200 pt-10">
          <h3 class="text-sm font-medium text-primary-600">Features & Avionics</h3>
          <div class="mt-4">
            <ul
              role="list"
              class="list-disc space-y-1 pl-5 text-sm/6 text-gray-700 marker:text-neutral-100"
            >
              {
                content.features.map((feature) => (
                  <li class="">{feature}</li>
                ))
              }
              
              {
                content.avionics.map((avionics) => (
                  <li class="">{avionics}</li>
                ))
              }
            </ul>
          </div>
        </div>

        <div class="mt-10 border-t border-gray-200 pt-10">
          <h3 class="text-sm font-medium text-primary-600">Equipment</h3>
          <div class="mt-4">
            <ul
              role="list"
              class="list-disc space-y-1 pl-5 text-sm/6 text-gray-700 marker:text-neutral-100"
            >
              {
                content.equipment.map((equipment) => (
                  <li class="">{equipment}</li>
                ))
              }
            </ul>
          </div>
        </div>

        <div class="mt-10 border-t border-gray-200 pt-10"> 
          <h3 class="text-sm font-medium text-primary-600">Aircraft</h3>
          <div class="mt-4">
            <ul
              role="list"
              class="list-disc space-y-1 pl-5 text-sm/6 text-gray-700 marker:text-neutral-100"
            >
                <li>Engine - {content.engine}</li>
                <li>Horse Power - {content.horsepower}</li>
                <li>Weight - {content.weight}</li>
                <li>Speed - {content.speed}</li>
                <li>Airworthiness - {content.airworthiness}</li>
            </ul>
          </div>
        </div>

