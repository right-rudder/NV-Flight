---
const { content } = Astro.props;
import ImageComp from "./ImageComp.astro";
---

<section
  class="relative isolate -z-0 bg-gray-900 text-white flex flex-col items-center justify-center overflow-hidden m-4 md:m-6 lg:m-8 rounded-3xl px-4 sm:px-6 lg:px-12 py-12 sm:py-16 lg:py-32"
>
  <!-- Background gradient overlay -->
  <div
    class="absolute inset-0 bg-gradient-to-b from-black/70 via-black/40 to-black/70 -z-10"
  >
  </div>

  <!-- Background image -->
  <ImageComp
    imagePath={content.imagePath}
    imageAlt={content.imageAlt}
    styles="absolute inset-0 size-full object-cover object-center -z-20"
  />

  <!-- Content wrapper -->
  <div
    class="relative z-10 flex flex-col items-center lg:items-start text-center lg:text-left gap-5 max-w-5xl"
  >
    <!-- Top small heading -->
    <p
      class="text-xl sm:text-2xl lg:text-3xl font-semibold tracking-wide text-primary-300"
    >
      {content.paragraph1}
    </p>

    <!-- Main Heading -->
    <h3
      class="text-4xl sm:text-5xl lg:text-7xl font-title font-black uppercase tracking-tight"
      set:html={content.headerH1}
    />

    <!-- Supporting paragraph -->
    <p
      class="text-base sm:text-lg lg:text-2xl font-medium text-muted-50 max-w-3xl sm:max-w-4xl mt-2 sm:mt-4"
      set:html={content.paragraph}
    />

    <!-- Buttons -->
    <div
      class="mt-6 w-full flex flex-col sm:flex-row sm:flex-wrap gap-4 sm:gap-6 justify-center lg:justify-start"
    >
      {
        content.buttons.map((btn) => (
          <a
            href={btn.link}
            class="btn-primary w-full sm:w-auto text-lg sm:text-xl px-6 py-3 text-center"
          >
            {btn.name}
          </a>
        ))
      }
    </div>
  </div>
</section>
